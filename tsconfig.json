{
  "compilerOptions": {
    "lib": [
      "ES6",
      "DOM"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "module": "ES6",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
